<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:paddingTop="@dimen/yearning_header_margin_top"
        android:paddingLeft="@dimen/yearning_header_margin_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header_primary_text"
        android:text="@string/day_header"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"/>

    <TextView
        android:paddingLeft="@dimen/yearning_header_margin_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header_secondary_text"
        android:text="@string/im_yearning_for"/>

</LinearLayout>